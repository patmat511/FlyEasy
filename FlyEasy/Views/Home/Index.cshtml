@model List<FlyEasy.Models.Flight>
@{
    ViewData["Title"] = "Lista lotów";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Lista lotów</h5>
            <a asp-action="Create" class="btn btn-success btn-sm">
                <i class="fa fa-plus"></i> Dodaj nowy lot
            </a>
        </div>
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3 mb-3">
                <div class="col-md-4">
                    <input type="text" name="flightNumber" class="form-control" placeholder="Numer lotu" value="@ViewBag.FlightNumber" />
                </div>
                <div class="col-md-4">
                    <input type="text" name="destination" class="form-control" placeholder="Destynacja" value="@ViewBag.Destination" />
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fa fa-search"></i> Filtruj
                    </button>
                </div>
            </form>
            <div class="table-responsive text-nowrap">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Numer lotu</th>
                            <th>Wylot</th>
                            <th>Destynacja</th>
                            <th>Czas odlotu</th>
                            <th>Akcje</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var flight in Model)
                        {
                            <tr>
                                <td>@flight.FlightNumber</td>
                                <td>@flight.Departure</td>
                                <td>@flight.Destination</td>
                                <td>@flight.DepartureTime.ToString("yyyy-MM-dd HH:mm")</td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@flight.Id" class="btn btn-info btn-sm me-1">
                                        <i class="fa fa-eye"></i> Szczegóły
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@flight.Id" class="btn btn-warning btn-sm me-1">
                                        <i class="fa fa-edit"></i> Edytuj
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@flight.Id" class="btn btn-danger btn-sm">
                                        <i class="fa fa-trash"></i> Usuń
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
