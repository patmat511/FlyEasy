@model FlyEasy.Models.Flight
@{
    ViewData["Title"] = "Dodaj nowy lot";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5><i class="fa fa-plus"></i> Dodaj nowy lot</h5>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div class="mb-3">
                    <label asp-for="FlightNumber" class="form-label">Numer lotu</label>
                    <input asp-for="FlightNumber" class="form-control" placeholder="Np. LO123" required />
                    <span asp-validation-for="FlightNumber" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Departure" class="form-label">Wylot</label>
                    <input asp-for="Departure" class="form-control" placeholder="Np. Warszawa" required />
                    <span asp-validation-for="Departure" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Destination" class="form-label">Destynacja</label>
                    <input asp-for="Destination" class="form-control" placeholder="Np. Kraków" required />
                    <span asp-validation-for="Destination" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="DepartureTime" class="form-label">Czas odlotu</label>
                    <input asp-for="DepartureTime" class="form-control" type="datetime-local" required />
                    <span asp-validation-for="DepartureTime" class="text-danger"></span>
                </div>
                <div class="text-end">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Zapisz
                    </button>
                    <a asp-action="Index" class="btn btn-secondary ms-2">
                        <i class="fa fa-times"></i> Anuluj
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
